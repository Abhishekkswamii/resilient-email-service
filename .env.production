# Production Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=10000

# CORS Configuration - Update with your actual Netlify URL
CORS_ORIGIN=https://your-netlify-site.netlify.app

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_EMAIL_REQUESTS=10
RATE_LIMIT_STATUS_REQUESTS=60
RATE_LIMIT_MONITORING_REQUESTS=120

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Add your actual email provider credentials here when ready
# SENDGRID_API_KEY=your_sendgrid_api_key
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain
